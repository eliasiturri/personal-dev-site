<!DOCTYPE html>
<html lang="<%= language %>" class="js">
<head>
    <%- include('../partials/head-outside-main-page'); %>
</head>
<body class="container">
    <div class="main-wrapper">
        <div class="noise-wrapper">
            <div class="noise"></div>

        </div>

        <div class="content-wrapper">
            <div class="header-wrapper">
                <header class="mw-o">
                    <%- include('../partials/header-outside-main-page'); %>
                </header>
            </div>            
            <main class="mw-o">
                
                <div class="content content--highlight content--intro work-sans-eb-800">
                    <h1 class="text-xl"><%= t("posts.header") %></h1>
                    <p class="text-xl text-align-center"><%= t("posts.intro") %></p> 

                    <% t("posts.items", { returnObjects: true }).map(post => { %>   
                        <a class="content blog-post-card no-link-decoration" href="<%= post.link %>">
                            <h1 class="text-xl"><%= post.title %></h1>
                            <p><%= post.intro %></p>
                            <span><%= post.date %></span>
                        </a>
                    <% }); %>                    
                </div>      


            </main>
            
            <footer class="mw-o">
                <%- include('../partials/footer'); %>
            </footer>
        </div>

    </div>

    
</body>
</html>