<!DOCTYPE html>
<html lang="en" class="js">
<head>
    <%- include('../../partials/head-outside-main-page'); %>
</head>
<body class="container">
    <div class="main-wrapper">
        <div class="noise-wrapper">
            <div class="noise"></div>

        </div>

        <div class="content-wrapper">
            <div class="header-wrapper">
                <header class="mw-o">
                    <%- include('../../partials/header-outside-main-page'); %>
                </header>
            </div>            
            <main class="mw-o">
                
                <div class="content content--highlight content--intro work-sans-eb-800">
                    <h1 class="text-xl"><%= t("fullposts.smarthome.title") %></h1>
                    <p class="text-xl text-align-center"><%= t("fullposts.smarthome.intro") %></p> 
                    <div class="blog-post-date">
                        <span><%= t("fullposts.smarthome.author") %></span>
                        <span><%= t("fullposts.smarthome.dateNexus") %></span>
                        <span><%= t("fullposts.smarthome.date") %></span>
                    </div>
                    <div class="blog-post-toc-title"><%= t("posts.tocName") %></div>
                    <ul class="blog-post-toc">
                        <% t("fullposts.smarthome.toc", { returnObjects: true }).forEach((el, index) => { %>   
                            <li class="toc-item toc-item-<%= index % 2 === 0 ? 'even' : 'odd' %>">
                                <a href="<%= el.link %>" class="toc-link">
                                    <%= el.name %>
                                </a>
                            </li>
                        <% }); %>
                    </ul>

                </div>      

                <div class="content">
                    <h2 id="goals"><%= t("fullposts.smarthome.sections.goals.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.goals.content") %></p>
                    
                    <h2 id="stack"><%= t("fullposts.smarthome.sections.stack.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.stack.content") %></p>
                    
                    <h2 id="integration"><%= t("fullposts.smarthome.sections.integration.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.integration.content") %></p>
                    
                    <h2 id="automation"><%= t("fullposts.smarthome.sections.automation.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.automation.content") %></p>
                    
                    <h2 id="energy"><%= t("fullposts.smarthome.sections.energy.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.energy.content") %></p>
                    
                    <h2 id="next"><%= t("fullposts.smarthome.sections.next.title") %></h2>
                    <p><%= t("fullposts.smarthome.sections.next.content") %></p>
                </div>

            </main>
            
            <footer class="mw-o">
                <%- include('../../partials/footer'); %>
            </footer>
        </div>

    </div>

    <script src="/assets/js/blog-toc.js"></script>
</body>
</html>
